<div class="page-header">
  <h1>Edit Banker #<%= @banker.id %></h1>
</div>

<% if @banker.errors.any? %>
  <% @banker.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_banker/<%= @banker.id %>" class="form-horizontal">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @banker.name %>">
    </div>
  </div>

  <!-- Label and input for division -->
  <div class="form-group">
    <label for="division" class="col-sm-2 control-label">
      Division
    </label>
    <div class="col-sm-10">
      <input type="text" id="division" name="division" placeholder="Division" class="form-control" value="<%= @banker.division %>">
    </div>
  </div>

  <!-- Label and input for email -->
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">
      Email
    </label>
    <div class="col-sm-10">
      <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @banker.email %>">
    </div>
  </div>

  <!-- Label and input for phone -->
  <div class="form-group">
    <label for="phone" class="col-sm-2 control-label">
      Phone
    </label>
    <div class="col-sm-10">
      <input type="text" id="phone" name="phone" placeholder="Phone" class="form-control" value="<%= @banker.phone %>">
    </div>
  </div>

  <!-- Label and input for marketer_id -->
  <div class="form-group">
    <label for="marketer_id" class="col-sm-2 control-label">
      Marketer
    </label>
    <div class="col-sm-10">
      <input type="text" id="marketer_id" name="marketer_id" placeholder="Marketer" class="form-control" value="<%= @banker.marketer_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Banker" class="btn btn-primary">
    </div>
  </div>
</form>
