<div class="page-header">
  <h1>Bankers</h1>
</div>

<p><a href="/bankers/new" class="btn btn-primary">Add a New Banker</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Division</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Marketer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bankers.each do |banker| %>
      <tr>
        <td><%= banker.name %></td>
        <td><%= banker.division %></td>
        <td><%= banker.email %></td>
        <td><%= banker.phone %></td>
        <td><%= banker.marketer_id %></td>
        <td>
          <a href="/bankers/<%= banker.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/bankers/<%= banker.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_banker/<%= banker.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

