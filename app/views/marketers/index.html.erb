<div class="page-header">
  <h1>Marketers</h1>
</div>

<p><a href="/marketers/new" class="btn btn-primary">Add a New Marketer</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Avatar url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @marketers.each do |marketer| %>
      <tr>
        <td><%= marketer.name %></td>
        <td><%= marketer.email %></td>
        <td><%= marketer.avatar_url %></td>
        <td>
          <a href="/marketers/<%= marketer.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/marketers/<%= marketer.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_marketer/<%= marketer.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

