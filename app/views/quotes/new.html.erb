<div class="page-header">
  <h1>Add Quote</h1>
</div>

<% if @quote.errors.any? %>
  <% @quote.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_quote" class="form-horizontal">
  <!-- Label and input for loan_terms_id -->


  <div class="form-group">
    <label for="client_id" class="col-sm-2 control-label">
      Client
    </label>
    <div class="col-sm-10">
      <input type="text" value="<%= @client.name %>" class="form-control" disabled>
      <input type="hidden" id="client_id" name="client_id" placeholder="Client" class="form-control" value="<%= @client.id %>">
    </div>
  </div>




  <!-- Label and input for product -->
  <div class="form-group">
    <label for="product" class="col-sm-2 control-label">
      Product
    </label>
    <div class="col-sm-10">
      <input type="text" id="product" name="product" placeholder="Product" class="form-control" value="<%= @quote.product %>">
    </div>
  </div>

  <!-- Label and input for rate -->
  <div class="form-group">
    <label for="rate" class="col-sm-2 control-label">
      Rate
    </label>
    <div class="col-sm-10">
      <input type="text" id="rate" name="rate" placeholder="Rate" class="form-control" value="<%= @quote.rate %>">
    </div>
  </div>

  <!-- Label and input for markup -->
  <div class="form-group">
    <label for="markup" class="col-sm-2 control-label">
      Markup
    </label>
    <div class="col-sm-10">
      <input type="text" id="markup" name="markup" placeholder="Markup" class="form-control" value="<%= @quote.markup %>">
    </div>
  </div>

  <!-- Label and input for est_fee -->
  <div class="form-group">
    <label for="est_fee" class="col-sm-2 control-label">
      Est fee
    </label>
    <div class="col-sm-10">
      <input type="text" id="est_fee" name="est_fee" placeholder="Est fee" class="form-control" value="<%= @quote.est_fee %>">
    </div>
  </div>

  <!-- Label and input for premium -->
  <div class="form-group">
    <label for="premium" class="col-sm-2 control-label">
      Premium
    </label>
    <div class="col-sm-10">
      <input type="text" id="premium" name="premium" placeholder="Premium" class="form-control" value="<%= @quote.premium %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @quote.notes %></textarea>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Quote" class="btn btn-primary">
    </div>
  </div>
</form>
